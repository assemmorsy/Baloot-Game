{
  "kind": "collectionType",
  "collectionName": "leagues",
  "info": {
    "singularName": "league",
    "pluralName": "leagues",
    "displayName": "البطولة",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "tournments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tournament.tournament",
      "mappedBy": "league"
    },
    "league_table": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::league-table.league-table",
      "mappedBy": "league"
    },
    "laws": {
      "type": "richtext"
    },
    "startAt": {
      "type": "date"
    },
    "endAt": {
      "type": "date"
    },
    "description": {
      "type": "text"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "league",
        "cup",
        "super"
      ],
      "required": true,
      "default": "league"
    },
    "state": {
      "type": "enumeration",
      "enum": [
        "upcoming",
        "live",
        "done"
      ],
      "default": "upcoming",
      "required": true
    },
    "champion": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team.team",
      "inversedBy": "winnerAt"
    }
  }
}
